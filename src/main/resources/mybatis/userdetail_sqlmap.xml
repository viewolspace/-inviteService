<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="UserDetail">

    <sql id="selectCommon">

			SELECT 	id,
                    uid,
                    open_id,
                    third_id,
                    nick_name,
                    c_time,
                    prize


	</sql>

    <insert id="insert" parameterType="UserDetail" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        <selectKey keyProperty="id" resultType="int" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>

        INSERT INTO user_detail
        (
        uid,
        open_id,
        third_id,
        nick_name,
        c_time,
        prize
        )
        VALUES
        (
        #{uid},
        #{openId},
        #{thirdId},
        #{nickName},
        #{cTime},
        #{prize}
        )

    </insert>



    <!--管理平台查询全部活动的接口-->
    <sql id="sql_count">
        select count(1)
    </sql>
    <sql id="sql_where">
        FROM user_detail a
        <where>
            <if test="uid != null">
                AND uid=#{uid}
            </if>
            <if test="openId != null and openId != ''">
                open_id = #{openId}
            </if>

            <if test="nickName != null and nickName != ''">
                nick_name = #{nickName}
            </if>
            <if test="thirdId != null and thirdId != ''">
                third_id = #{thirdId}
            </if>
            <if test="prize != null and prize > 0">
                prize = #{prize}
            </if>


        </where>
    </sql>
    <sql id="sql_order">
        order by c_time
    </sql>

    <select id="findByParams_count" parameterType="java.util.HashMap" resultType="int">
        <include refid="sql_count" />
        <include refid="sql_where" />
    </select>
    <select id="findByParams" parameterType="java.util.HashMap" resultType="UserInvite">
        <include refid="selectCommon" />
        <include refid="sql_where" />
        <include refid="sql_order" />
    </select>


</mapper>